<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkBucket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/semi_brown</item>
        <item name="colorPrimaryVariant">@color/semi_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/semi_brown</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="colorSecondaryVariant">@color/semi_brown</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/semi_brown</item>
        <item name="colorPrimaryVariant">@color/semi_brown</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
<item name="android:textColor">@color/semi_brown</item>
        <item name="fontFamily">@font/ubuntu</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/semi_brown</item>
        <item name="colorSecondaryVariant">@color/semi_brown</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- On API 21+ you can use android:statusBarColor -->
        <item name="colorPrimaryDark">@color/semi_brown</item>
    </style>
    <style name="FriendlyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTitle</item>

        <item name="fontFamily">@font/ubuntu</item>
    </style>
</resources>